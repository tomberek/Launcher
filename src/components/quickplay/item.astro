---
let { server } = Astro.props;
export interface props {
    server: string,
}
---




<div class="flex items-center justify-between bg-[#00000057] p-[10px] border-2 rounded-[15px] border-teaclient" >
    <span class="text-lg pl-2">{server.charAt(0).toUpperCase() + server.slice(1)}</span>
    <button class="p-3 mr-[3px] rounded-md bg-[#2E1F3A]" title={`Click to join ${server}`}>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="h-6"><path fill="white" d="M73 39c-14.8-9.1-33.4-9.4-48.5-.9S0 62.6 0 80V432c0 17.4 9.4 33.4 24.5 41.9s33.7 8.1 48.5-.9L361 297c14.3-8.7 23-24.2 23-41s-8.7-32.2-23-41L73 39z"/></svg>
    </button>
</div>