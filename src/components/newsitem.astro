---
let {title, date, desc, imgurl} = Astro.props;
export interface props {
    title: string,
    date: string,
    desc: string,
    imgurl: string
}
---
<div class="bg-teaclient rounded-lg">
    <img src={imgurl} alt="TeaClient logo placeholder image" class="rounded-lg w-full h-1/6">
    <div class="flex flex-col space-x-5 space-y-5 mb-10">
        <h1 class="items-start text-left pl-5 font-bold text-md">{title}</h1>
        <span class="text-sm font-medium">{desc}</span>
    </div>
</div> 