import Sidebar from "../components/sidebar.astro";
import Hero from "../components/hero.astro";
---

<Titlebar />
<Topbar />
<Sidebar />
<main class="m-auto flex flex-col justify-center text-center">
  <Hero/>
 <!-- Todo:Page -->
