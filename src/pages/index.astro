---
import Titlebar from "../components/titlebar.astro";
import Topbar from "../components/topbar.astro";
import Sidebar from "../components/sidebar.astro";
---

<Titlebar />
<Topbar />
<main class="flex">
  <div class=" p-5">
    <Sidebar />
  </div>
  <!-- Main -->
  <div class="w-5/6 p-5">
    <!-- Welcome -->
    <div class="flex justify-between items-center mb-10">
        <div class="flex space-x-4">
            <div class="bg-green-500 rounded-lg p-2">
                <img src="https://placehold.co/64x64" alt="Avatar" class="rounded-lg">
            </div>
            <div class="flex flex-col justify-center">
                <span class="text-lg font-semibold">Welcome back,</span>
                <span class="text-2xl font-bold">Username</span>
            </div>
        </div>
        <div class="flex space-x-2">
            <button class="bg-gray-600 p-2 rounded-md">
                <i class="fas fa-cog"></i>
            </button>
            <button class="bg-gray-600 p-2 rounded-md">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>

    <!-- Server + News -->
    <div class="flex">
        <!-- Server List -->
        <div class="bg2 w-1/3 p-5 rounded-lg mr-5 space-y-5">
            <div class="flex items-center space-x-3 mb-5">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="h-6"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M64 32C28.7 32 0 60.7 0 96v64c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V96c0-35.3-28.7-64-64-64H64zm280 72a24 24 0 1 1 0 48 24 24 0 1 1 0-48zm48 24a24 24 0 1 1 48 0 24 24 0 1 1 -48 0zM64 288c-35.3 0-64 28.7-64 64v64c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V352c0-35.3-28.7-64-64-64H64zm280 72a24 24 0 1 1 0 48 24 24 0 1 1 0-48zm56 24a24 24 0 1 1 48 0 24 24 0 1 1 -48 0z"/></svg>
                <span class="text-lg font-semibold">Servers</span>
            </div>
            <div class="space-y-4">
                <div class="flex items-center justify-between" >
                    <span class="text-lg">Hypixel</span>
                    <button class="p-2 rounded-md" title="Click to join Hypixel">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="h-6"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M73 39c-14.8-9.1-33.4-9.4-48.5-.9S0 62.6 0 80V432c0 17.4 9.4 33.4 24.5 41.9s33.7 8.1 48.5-.9L361 297c14.3-8.7 23-24.2 23-41s-8.7-32.2-23-41L73 39z"/></svg>
                    </button>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-lg">Minemen Club</span>
                    <button class="p-2 rounded-md" title="Click to join Minemen Club">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="h-6"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M73 39c-14.8-9.1-33.4-9.4-48.5-.9S0 62.6 0 80V432c0 17.4 9.4 33.4 24.5 41.9s33.7 8.1 48.5-.9L361 297c14.3-8.7 23-24.2 23-41s-8.7-32.2-23-41L73 39z"/></svg>
                    </button>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-lg">Sharpness</span>
                    <button class="p-2 rounded-md" title="Click to join Sharpness">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="h-6"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M73 39c-14.8-9.1-33.4-9.4-48.5-.9S0 62.6 0 80V432c0 17.4 9.4 33.4 24.5 41.9s33.7 8.1 48.5-.9L361 297c14.3-8.7 23-24.2 23-41s-8.7-32.2-23-41L73 39z"/></svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- News -->
        <div class="w-2/3 space-y-5">
            <div class="bg2 p-5 rounded-lg">
                <div class="flex items-center justify-between mb-5">
                    <span class="text-lg font-semibold">TeaClient Released</span>
                    <span class="text-xs text-gray-400">December 1st, 2024</span>
                </div>
                <div class="flex items-center space-x-3">
                    <img src="https://placehold.co/128x128" alt="TeaClient logo placeholder image" class="rounded-lg">
                    <span class="text-sm">TeaClient has been officially released</span>
                </div>
            </div> 
            <div class="bg2 p-5 rounded-lg">
                <div class="flex items-center justify-between mb-5">
                    <span class="text-lg font-semibold">TeaClient Released</span>
                    <span class="text-xs text-gray-400">December 1st, 2024</span>
                </div>
                <div class="flex items-center space-x-3">
                    <img src="https://placehold.co/128x128" alt="TeaClient logo placeholder image" class="rounded-lg">
                    <span class="text-sm">TeaClient has been officially released</span>
                </div>
            </div> 
        </div>
    </div>
    
    <!-- Version + Play -->
    <div class="flex w-5/6 bg2 p-5 h-auto rounded-lg absolute bottom-5">
        <div class="w-1/3">
            <label for="version" class="block mb-2 text-sm font-medium text-gray-300">Version</label>
            <select id="version" class="bg-gray-600 text-white rounded-lg p-2 w-full">
                <option>Forge 1.8.9</option>
            </select>
        </div>
        <div class="w-2/3 mt-5 flex justify-end">
            <button class="bg-green-500 text-white px-5 py-2 rounded-lg font-semibold">Launch</button>
        </div>
    </div>

  </div>
</main>

<style>
  html {
    @apply rounded-2xl bg-[#352244];
    background: linear-gradient(
      171deg,
      rgba(53, 34, 68, 1) 0%,
      rgba(17, 0, 30, 1) 100%
    );
    @apply bg-center bg-cover bg-no-repeat bg-fixed;
    overflow-y: visible;
  }

  body {
    height: 100%;
  }

  :root {
        --bg: #321b3e;
        --bg2: #220f2c;
    }
    .bg {
        background-color: var(--bg);
    }
    .bg2 {
        background-color: var(--bg2);
    }
</style>
