{
  "build": {
    "beforeBuildCommand": "bun run astro:build",
    "beforeDevCommand": "bun run astro:dev",
    "devPath": "http://localhost:4321",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "TeaClient",
    "version": "0.1.0"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": true,
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://api.mojang.com/users/profiles/minecraft/*", "https://cdn.tailwindcss.com/*", "https://api.iconify.design/*"]
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "net.teaclient",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "freezePrototype": true,
      "csp": {
        "default-src": "'self'",
        "img-src": "'self'"
      }
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "width": 1715,
        "height": 1085,
        "minWidth": 1329,
        "minHeight": 729,
        "resizable": true,
        "title": "Teaclient",
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
